<% @statusupdates.sort_by{|e| -e[:id]}.each do |statusupdate| %>
	<b><%= statusupdate.username %></b> <br>
	<%= statusupdate.content %> <br>
	<small>
		<i><%= link_to statusupdate.comments.all.count.to_s << " comments",  statusupdate%></i> <br>
		<%= statusupdate.updatetime %> <br>
		<% if statusupdate.username == @account.username %>
			<% if cannot? :update, @statusupdate %>
				<%= link_to "Edit", edit_statusupdate_path(statusupdate) %>
			<% end %>
			 | 
			<% if cannot? :update, @statusupdate %>
				<%= link_to "Delete", statusupdate, :confirm => "Are you sure?", :method => :delete %>
			<% end %>	
		<% end %>
		
	</small>
	<hr>
<% end %>
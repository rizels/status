<% for comment in @comments %>
	<table class="table table-striped">
		<tr>
			<td><b><%= comment.commenter %></b>  <%= comment.body %></td>
			<% if !comment.deleted_at.nil? %>
				<td width="3%">
					<i>deleted</i>
				</td>		
			<% end %>
			<td width="3%">
				<%= link_to 'Show', statusupdate_comment_path(:statusupdate_id => comment.statusupdate_id, :id => comment.id), :class => 'btn btn-mini btn-mini' %>
			</td>		
			<td width="3%">
				<% if can? :update, comment %>
					<%= link_to 'Edit', edit_statusupdate_comment_path(:statusupdate_id => comment.statusupdate_id, :id => comment.id), :class => 'btn btn-mini btn-mini' %>
				<% end %>
			</td>
			<td width="3%">
				<% if can? :destroy, comment %>
					<%= link_to 'Delete' , [comment.statusupdate, comment], :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %>
				<% end %>
			</td>
		</tr>
	
	</table>
<% end %>

<h2>Listing <%= @account.username %> Information </h2>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @infos.each do |info| %>
  <tr>
    <td><%= info.name %></td>
    <td width="3%"><%= link_to 'Show', info, :class => 'btn btn-mini' %></td>
    <td width="3%"><%= link_to 'Edit', edit_info_path(info), :class => 'btn btn-mini' %></td>
    <td width="3%"><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Information', new_info_path, :class => 'btn btn-primary'%>

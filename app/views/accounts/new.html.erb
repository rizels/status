<center><h1>Registration Form</h1></center>
<%= simple_form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.input :username %>	
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<div class='form-actions'>
		<%= f.submit "Registration", :class => 'btn btn-primary' %>
	</div>
<% end %>
	